<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>StudentList</servlet-name>
        <servlet-class>com.data.session05.controller.Bai4.StudentListServlet.</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentList</servlet-name>
        <url-pattern>/studentList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditStudent</servlet-name>
        <servlet-class>com.data.session05.controller.Bai4.EditStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditStudent</servlet-name>
        <url-pattern>/editStudent</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateStudent</servlet-name>
        <servlet-class>com.data.session05.controller.Bai4.UpdateStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateStudent</servlet-name>
        <url-pattern>/updateStudent</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteStudent</servlet-name>
        <servlet-class>com.data.session05.controller.DeleteStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteStudent</servlet-name>
        <url-pattern>/deleteStudent</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.data.session05.controller.Bai6.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.data.session05.controller.Bai6.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
